@{
    ViewData["Title"] = "Criar Contatos";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar Contato</h1>

</div>

<form>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digíte o nome do contato">
    </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" class="form-control" placeholder="Digíte o e-mail do contato">
    </div>

    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" class="form-control" placeholder="Digíte o celular do contato">
    </div>

    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secondary d-block btn-block" asp-controller="Contato" Asp-Action="Index" role="button">Voltar</a>
</form>